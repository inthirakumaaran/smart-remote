<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inthirakumaaranwso2com.smart_remote.viewController.startpage">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMOTE CONTROLLER"/>

        <Button
            android:id="@+id/start_select"
            android:layout_width="150dp"
            style="@style/buttonback"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="110dp"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:onClick="select"/>
        <Button
            android:id="@+id/start_register"
            style="@style/buttonback"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"
            android:layout_height="wrap_content"
            android:text="REGISTER NEW"
            android:onClick="regg"/>

        <Button
            android:id="@+id/start_quit"
            style="@style/buttonquit"
            android:layout_width="120dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="125dp"
            android:layout_height="wrap_content"
            android:text="QUIT"
            android:onClick="quit"/>








    </LinearLayout>

</android.support.constraint.ConstraintLayout>
