<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reg_content"
    tools:context="com.example.inthirakumaaranwso2com.smart_remote.viewController.register_new">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"

        tools:layout_editor_absoluteY="10dp"
        tools:layout_editor_absoluteX="10dp">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:hint="REMOTE NAME"
            android:id="@+id/regi_name"/>
        <ImageButton
            android:id="@+id/regi_power"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/ic_power_settings_new"
            android:clickable="true"
            android:elevation="2dp"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:id="@+id/regi_chDwn"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_down"
                android:clickable="true"
                android:elevation="2dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:id="@+id/regi_chUp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_up"
                android:clickable="true"
                android:elevation="2dp"/>

        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/regi_volUp"
                android:layout_marginLeft="100dp"
                app:srcCompat="@drawable/ic_volume_down"
                android:clickable="true"
                android:elevation="2dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/regi_volDwn"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/ic_volume_up"
                android:clickable="true"
                android:elevation="2dp"/>

        </android.support.v7.widget.LinearLayoutCompat>
     <android.support.v7.widget.LinearLayoutCompat
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:orientation="horizontal"
         android:layout_marginTop="50dp">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:id="@+id/reg_save"

             android:text="SAVE"
             android:layout_marginLeft="90dp"/>
         <Button
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:id="@+id/reg_cancel"

             android:text="CANCEL"/>


     </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
